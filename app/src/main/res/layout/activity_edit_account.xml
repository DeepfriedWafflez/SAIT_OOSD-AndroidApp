<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAccountActivity">

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="186dp"
        android:layout_height="498dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.283">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Customer Id" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="First Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Last Name" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Address" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="City" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Province" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Postal Code" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Country" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Home Phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Business Phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Agent Id" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="User Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Password" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="199dp"
        android:layout_height="508dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etCustomerId"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Customer Id" />

        <EditText
            android:id="@+id/etCustFirstName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="First Name" />

        <EditText
            android:id="@+id/etCustLastName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Last Name" />

        <EditText
            android:id="@+id/etCustAddress"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Address" />

        <EditText
            android:id="@+id/etCustCity"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="City" />

        <EditText
            android:id="@+id/etCustProv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Province" />

        <EditText
            android:id="@+id/etCustPostal"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Postal Code" />

        <EditText
            android:id="@+id/etCustCountry"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Country" />

        <EditText
            android:id="@+id/etCustHomePhone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Home Phone" />

        <EditText
            android:id="@+id/etCustBusPhone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Business Phone" />

        <EditText
            android:id="@+id/etCustEmail"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Email" />

        <EditText
            android:id="@+id/etAgentId"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Agent Id" />

        <EditText
            android:id="@+id/etCustUsername"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="User Name" />

        <EditText
            android:id="@+id/etCustPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Password" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="95dp"
        android:layout_height="46dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
        tools:text="Save" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSave"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />
</android.support.constraint.ConstraintLayout>